# nvm alias
nvmv() {
  # Try to use the specified version, suppressing all output.
  # The &> operator is a zsh shorthand for >/dev/null 2>&1
  nvm use "$@" &> /dev/null

  # Check if the last command failed.
  if [[ $? -ne 0 ]]; then
    # If 'nvm use' failed, print a message in yellow and try to install.
    # We use zsh's built-in colors for a cleaner look.
    print -P "%F{yellow}Node.js version not found. Attempting to install...%f"
    nvm install "$@" && nvm use "$@"
  else
    # If the first 'nvm use' succeeds, print its output.
    # This provides feedback when you switch to an already installed version.
    nvm use "$@"
  fi
}

npmi() {
  nvmv && npm i
}

